{
  "name": "policy-TwitterJson-Csv",
  "description": "policy-TwitterJson-Csv",
  "sparkStreamingWindow": 6000,
  "rawData": {
    "enabled": "false",
    "path": "myTestParquetPath"
  },
  "input": {
    "name": "in-twitter-json",
    "type": "TwitterJson",
    "configuration": {
      "consumerKey": "*********",
      "consumerSecret": "*********",
      "accessToken": "*********",
      "accessTokenSecret": "*********"
    }
  },
  "transformations": [
    {
      "name": "morphline",
      "order": 0,
      "type": "Morphlines",
      "outputFields": [
        {"name":"text"},
        {"name":"source"},
        {"name":"hashtags"},
        {"name":"retweets"}
      ],
      "configuration": {
        "morphline": {
          "id": "test1",
          "importCommands": [
            "org.kitesdk.**"
          ],
          "commands": [
            {
              "readJson": {}
            },
            {
              "extractJsonPaths": {
                "paths": {
                  "text": "/text",
                  "source": "/source",
                  "hashtag": "/hashtagEntities[]/text",
                  "retweets": "/retweetCount"
                }
              }
            }
          ]
        }
      }
    }
  ],
  "cubes": [
    {
      "name": "testCube",
      "writer": {
        "outputs" : ["out-csv"]
      },
      "dimensions": [
        {
          "field": "retweets",
          "name": "retweets"
        }
      ],
      "operators": [
        {
          "name": "countoperator",
          "type": "Count",
          "configuration": {}
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-csv",
      "type": "Csv",
      "configuration": {
        "path": "/tmp/",
        "header": "false",
        "delimiter": ","
      }
    }
  ]
}